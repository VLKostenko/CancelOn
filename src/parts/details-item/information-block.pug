.details-item-block#sticky-wrap
   .information-block.clearfix
      .onoffswitch-gallery-wrapper.hidden-xs
         .onoffswitch-gallery.pull-right
            input#myonoffswitch2.myonoffswitch.onoffswitch-checkbox(type='checkbox', name='onoffswitch2')
            label.onoffswitch-label(for='myonoffswitch2')
               span.onoffswitch-inner
               span.onoffswitch-switch
      .tripadvisor-logo.visible-sm
         img(src='images/tripadvisor-logo.svg', alt='tripadvisor logo')
      .slider-block.clearfix
         include ../landing/placeholder/information-block-slider
         .owl-carousel.owl-carousel-full.photoswipe-block.placeholder-show(data-slider-id='1', itemscope, itemtype="http://schema.org/ImageGallery")
            - for(var i = 1; i < 16; i++)
               figure(itemprop='associatedMedia', itemscope='', itemtype='http://schema.org/ImageObject')
                  a(href='images/hotel-image' + i + '.jpg', itemprop='contentUrl', data-size='1086x908')
                     img(src='images/hotel-image' + i + '.jpg', alt='Alt ' + i)
            - for(var i = 1; i < 16; i++)
               figure(itemprop='associatedMedia', itemscope='', itemtype='http://schema.org/ImageObject')
                  a(href='images/hotel-image' + i + '.jpg', itemprop='contentUrl', data-size='1086x908')
                     img(src='images/hotel-image' + i + '.jpg', alt='Alt ' + i)
         .owl-thumbs.owl-thumbs-full.placeholder-show(data-slider-id='1')
            - for(var i = 1; i < 16; i++)
               button.owl-thumb-item
                  img(src='images/hotel-slider/' + i + '.png', alt='full slider image')
            - for(var i = 1; i < 16; i++)
               button.owl-thumb-item
                  img(src='images/hotel-slider/' + i + '.png', alt='full slider image')
      .gallery-map-wrapper
         #map.hidden
   .main-details-block
      .main-details-block_header
         ul.list-inline
            li.active
               a(href='#payment-tab', data-toggle='tab') Payment
            li
               a(href='#description-tab', data-toggle='tab') Description
         a.make-offer.hidden-xs(href='javascript:void(0)') Make a Price Offer
      .tab-content
         #payment-tab.tab-pane.active
            .payment-block
               include ../payment/payment-block
         #description-tab.tab-pane
            include ../landing/hotel-information_block
.details-item-info.hidden-xs
   .main-sidebar-wrapper
      .main-sidebar.clearfix.ui.sticky
         .payment-details.clearfix
            .sidebar-block-wrapper
               .sidebar-block.hidden-xs
                  include placeholder/panel-placeholder
                  .panel.panel-default.panel-second.placeholder-show
                     .panel-heading
                        h4.panel-title Your Booking Details
                     .panel-body.payment-booking-details
                        .days-details
                           p Check-in:
                           p.start
                              span.dayName Friday
                              span.day  21
                              span.month  July
                              span.year  2017
                              span  form 14:00
                           br
                           p Check-out:
                           p.end
                              span.dayName Friday
                              span.day  27
                              span.month  July
                              span.year  2017
                              span  form 14:00
                           br
                           p Total length of stay:
                           p.total
                              span.nights 2
                              span  nights
                        .change-dates-button.clearfix
                           a.change(href='javascript:void(0)') Change Dates
                     .panel-body.payment-details-full
                        .price
                           span.text Price
                           span.number $2,688.86
                        .old-price
                           span Old price $4,872.00
         .sidebar-block.hidden-sm.hidden-xs
            .sidebar-wrapper
               include ../landing/placeholder/information-block-sidebar
               .sidebar-logo.placeholder-show
                  img(src='images/tripadvisor-logo.svg', alt='tripadvisor logo')
                  span Know better. Book better. Go better.
               .sidebar-info.placeholder-show
                  .sidebar-info_name-rating
                     .sidebar-info_name-rating_title
                        div Holiday Inn Express Hotel Suites Las Vegas I-215 S. Beltway
                     .sidebar-info_name-rating_rating
                        .title TripAdvisor Traveller Rating
                        img(src='./images/icons/rate/5.0.svg', alt='rating')
                        .text Based on 1,241 traveller reviews
                  .sidebar-info_ranking
                     .title TripAdvisor Ranking
                     .text #
                        b 139 of 697
                        |  hotels in Hong Kong
                  .sidebar-info_comments
                     .sidebar-info_comments-title
                        span Most Recent Traveller Reviews
                     .sidebar-info_comments-comment
                        span 24 Apr 2017: “Don't know why it gets such bad...”
                     .sidebar-info_comments-comment
                        span 6 Mar 2017: “Syringe in parking lot, triple charged, run...”
                     .sidebar-info_comments-comment
                        span 18 Jan 2017: “Last night in town during a conference”
                     .sidebar-info_comments-comment
                        span 29 Dec 2016: “Rigid Cancellation Policy”
                     .sidebar-info_comments-comment
                        span 4 Dec 2016: “Online Rip-off”
