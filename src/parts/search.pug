.container-fluid.white.pl-xs-0.pr-xs-0.pos-rel.main-search-wrapper
	.container.pl-xs-0.pr-xs-0
		.row.container-search-wrapper
			.col-md-12.pl-xs-0.pr-xs-0.pl-md-0.pr-md-0
				.input-group.search-group
					input.form-control.input-search(type='text', placeholder='What Are You Looking For?')
					span.search-filter-block
						.input-group.input-group-white
							span.input-group-addon
								i.fa.fa-calendar
							input.form-control.datepicker-input(type='text', placeholder='July, 3th')
							input.form-control.datepicker-output(type='text', placeholder='August, 14th')
						.people-count
							i.fa.fa-sliders(aria-hidden='true')
							a#peopleCount.dropdown-toggle(href='javascript:void(0)', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
								i.fa.fa-language(aria-hidden='true')
								| Language
								span.bs-caret
									span.caret
							.dropdown-menu.languages-menu(aria-labelledby='peopleCount')
								label.col-form-label.mt-20(for='quant[1]') Rooms
									.input-group.mt-10
										span.input-group-btn
											button.btn.btn-info.btn-number(type='button', disabled='disabled', data-type='minus', data-field='quant[1]')
												| -
										input.form-control.input-number(type='text', id='quant[1]', name='quant[1]', value='1', min='1', max='10')
										span.input-group-btn
											button.btn.btn-warning.btn-number(type='button', data-type='plus', data-field='quant[1]')
												| +
								label.col-form-label.mt-20(for='quant[2]') Adults
								.input-group.mt-10.mb-20
									span.input-group-btn
										button.btn.btn-info.btn-number(type='button', data-type='minus', data-field='quant[2]')
											| -
									input.form-control.input-number(type='text', id='quant[2]', name='quant[2]', value='2', min='1', max='100')
									span.input-group-btn
										button.btn.btn-warning.btn-number(type='button', data-type='plus', data-field='quant[2]')
											| +
								label.col-form-label.mt-20(for='quant[2]') Children
									.input-group.mt-10.mb-20
										span.input-group-btn
											button.btn.btn-info.btn-number(type='button', data-type='minus', data-field='quant[3]')
												| -
										input.form-control.input-number(type='text', id='quant[3]', name='quant[3]', value='1', min='1', max='100')
										span.input-group-btn
											button.btn.btn-warning.btn-number(type='button', data-type='plus', data-field='quant[3]')
												| +
					span.input-search-btn.hidden-xs
						button.btn.btn-default(type='button') SEARCH
					span.input-search-btn.visible-xs
						button(type='button')
							.search-icon
					.load-icon
						i.fa.fa-spinner.fa-spin(aria-hidden='true')
					.search-result
						span.city-label City
						.scrollbar-dynamic
							.search-result-inner
								ul.list-group
									li.list-group-item
										a(href="javascript:void(0)")
											span.result-icon.marker
											h4 London
											span.location Greater London, United Kingdom
									li.list-group-item
										a(href="javascript:void(0)")
											span.result-icon.marker
											h4 London
											span.location Victoria Station, United Kingdom
									li.list-group-item
										a(href="javascript:void(0)")
											span.result-icon.home
											h4 Paddington Station, London
											span.location London, United Kingdom
									li.category
										span.category-name Point of interest
									li.list-group-item
										a(href="javascript:void(0)")
											span.result-icon.info
											h4 LHR
											span.location London Heathrow Airport, United Kingdom
									li.list-group-item
										a(href="javascript:void(0)")
											span.result-icon.plane
											h4 London Gatwick Airport, London
											span.location London United Kingdom
						a(href="javascript:void(0)").small.search-all: b All Results 75
					// /.search-result
				// /input-group
